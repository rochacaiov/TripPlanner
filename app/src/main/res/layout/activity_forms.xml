<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#131212"
    tools:context=".FormActivity">

    <EditText
        android:id="@+id/editTextDate3"
        android:layout_width="164dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="date"
        android:text="Data de ida"
        android:textColor="#EAE5E5"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="394dp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1B1A1A"
        android:clickable="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Encontre sua viagem"
        android:textAlignment="center"
        android:textColor="#F1EEEE"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="23dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:textColorHint="#FAF7F7"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Origem "
            android:textColor="#F8EEEE"
            android:textColorHint="#D81B60" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/editTextDate3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Destino"
            android:textColor="#EFE6E6" />
    </android.support.design.widget.TextInputLayout>

    <EditText
        android:id="@+id/editTextDate2"
        android:layout_width="164dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="date"
        android:text="Data de volta"
        android:textColor="@color/white"
        android:textColorHint="#F4F0F0"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="451dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="543dp" />
</android.support.constraint.ConstraintLayout>